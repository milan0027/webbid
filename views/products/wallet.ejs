<% layout('layouts/boilerplate') %>
<div class="row">
    
    
    <div class="col-6 offset-3">
        <div class="mb-3">

            <h1>Add Value</h1>
        <h3><i class="fas fa-coins"></i>  <%= currentUser.wallet %> UC</h3>
        </div>
        
    <form action="/user/wallet?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="wallet">Value</label>
            <input class="form-control" min="0" max="100000" type="number" id="wallet" placeholder="Max: 100000" name="walletAdd[wallet]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Value</button>
        </div>
    </form>
    </div>

</div>