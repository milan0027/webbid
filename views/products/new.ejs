<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Product</h1>
    <div class="col-6 offset-3">
    <form action="/products" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="product[title]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="product[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
        </div>

       
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Add Images</label>
            <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
          </div>
        <!-- <div class="mb-3">
            <label class="form-label" for="title">Image URL</label>
            <input class="form-control" type="text" id="title" value="https://source.unsplash.com/collection/483251" name="product[image]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div> -->
        <div class="mb-3">
            <label class="form-label" for="price">Base Price</label>
            <input class="form-control" type="number" min="0" id="price" name="product[price]" required>
            <div class="invalid-feedback">
                Please provide a valid price.
              </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="startTime">Start Time</label>
            <input class="form-control" type="datetime-local" id="startTime" name="product[startTime]" required>
            <div class="invalid-feedback">
                Please provide a valid time.
              </div>
        </div>
        <div>
            <label class="form-label" for="customRange3" class="form-label">Duration</label>
            <input  type="range" class="form-range" name="product[duration]" min="0.5" max="3" step="0.5" value="1" id="customRange3">
        </div>
        <div class="value mb-3">1 hr 0 min</div>
        
        <div class="mb-3">
            <button class="btn btn-success">Add Product</button>
        </div>
    </form>
    </div>
    <a href="/products">All products</a>
    </div>
<script>
    var elem = document.querySelector('input[type="range"]');

var rangeValue = function(){
var newValue = elem.value;
var hr=Math.floor(newValue);
var min=newValue*60-hr*60;
var target = document.querySelector('.value');
target.innerHTML = `${hr} hr ${min} min`;
}

elem.addEventListener("input", rangeValue);

</script>
