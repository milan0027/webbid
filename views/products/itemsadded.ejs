<% layout('layouts/boilerplate') %>

<div class="mb-3">
    <h1>Items Added</h1>
    
    <% if(type=="All") {%> 
    <a class="btn btn-info" href="/user/itemsadded" >All</a>
    <% }else { %>
        <a class="btn btn-dark" href="/user/itemsadded" >All</a>
        <% } %> 

        <% if(type=="Live") {%> 
            <a class="btn btn-info" href="/user/itemsadded/live" >Live</a>
            <% }else { %>
                <a class="btn btn-dark" href="/user/itemsadded/live" >Live</a>
                <% } %> 
                <% if(type=="Scheduled") {%> 
                    <a class="btn btn-info"  href="/user/itemsadded/scheduled" >Scheduled</a>
                    <% }else { %>
                        <a class="btn btn-dark" href="/user/itemsadded/scheduled" >Scheduled</a>
                        <% } %> 
                        <% if(type=="BiddingOver") {%> 
                            <a class="btn btn-info" href="/user/itemsadded/biddingover" >Bidding Over</a>
                            <% }else { %>
                                <a class="btn btn-dark" href="/user/itemsadded/biddingover"  >Bidding Over</a>
                                <% } %> 
                                <% if(type=="Sold") {%> 
                                    <a class="btn btn-info" href="/user/itemsadded/sold" >Sold</a>
                                    <% }else { %>
                                        <a class="btn btn-dark" href="/user/itemsadded/sold" >Sold</a>
                                        <% } %> 

</div>
<hr>
<% if(products.length == 0){ %> 
    <h5>No Items Here</h5>
    <% } %>
<div class="row row-cols-1 row-cols-md-4 g-4">
    <% for (let product of products){%>
        <div class="col">
            <a class="cardItem" href="/products/<%= product._id %>">
              <div class="card h-100">
                <% if(product.image.length == 0){ %> 
                    <img src="https://homestaymatch.com/images/no-image-available.png" class="card-img-top" alt="...">
                    <% }else { %> 
                      <img src="<%= product.image[0].url%>" class="card-img-top" alt="...">
                      <% } %> 
                
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><h5 class="card-title"><%= product.title %></h5></li>
                  <% if(product.endTime >= Date.now() && product.startTime <= Date.now()){ %> 
                    <li class="list-group-item"><span style="font-weight:700; color: red;"><i class="fas fa-circle"></i> Live</li>
                    <% } else { %> 
                      <li class="list-group-item"><span style="font-weight:700;">Start: </span><%= product.startTime.toLocaleString('en-GB') %></li>
                      <% } %> 
                  <li class="list-group-item"><span style="font-weight:700;">End: </span><%= product.endTime.toLocaleString('en-GB') %></li>
                  <li class="list-group-item"><span style="font-weight:700;"><%= product.price%> UC</span></li>
                  
                </ul>
               
                
              </div>
            </a>
            </div>
    <% }%>
</div>