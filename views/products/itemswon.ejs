<% layout('layouts/boilerplate') %>

<h1>Items Won</h1>
<hr>
<% if(products.length == 0){ %> 
  <h5>No Items Here</h5>
  <% } %>
<div class="row row-cols-1 row-cols-md-4 g-4">
 
    <% for (let i=products.length - 1; i>=0; i--){%>
      <% let product = products[i]; %> 
      <div class="col">
        <a class="cardItem" href="/products/<%= product._id %>">
          <div class="card h-100">
            <% if(product.image.length == 0){ %> 
              <img src="https://homestaymatch.com/images/no-image-available.png" class="card-img-top" alt="...">
              <% }else { %> 
                <img src="<%= product.image[0].url%>" class="card-img-top" alt="...">
                <% } %> 
            
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h5 class="card-title"><%= product.title %></h5></li>
              <li class="list-group-item"><span style="font-weight:700;"><i class="fas fa-truck"></i> In Transit</span></li>
              <li class="list-group-item"><span style="font-weight:700;"><%= product.price%> UC</span></li>
              
            </ul>
           
            
          </div>
        </a>
        </div>
    <% }%>
</div>